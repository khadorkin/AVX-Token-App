{
  "plugins": ["flowtype"],
  "extends": [
    "airbnb",
    "plugin:import/electron",
    "plugin:flowtype/recommended",
    "plugin:prettier/recommended"
  ],
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack/mobile-ui.config.js"
      }
    },
    "import/core-modules": [ "react-native", "react-hot-loader-patch", "electron", "react-hot-loader-app-container" ]
  },
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "__static": true,
    "staticResourcesPath": true,
    "__": true,
    "__n": true,
    "app": true
  },
  "rules": {
    "import/no-commonjs": "warn",
    "import/no-amd": "warn",
    "import/prefer-default-export": "off",
    "react/jsx-filename-extension": "off",
    "func-names": ["warn", "as-needed"],
    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": ["**/*.test.js", "**/*.spec.js", "./webpack/**/*.js", "./src/common/*/dev.js"]
    }]
  }
}
